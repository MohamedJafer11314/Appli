{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "Install dependencies",
			"command": "npm install",
			"group": "build",
			"problemMatcher": [
				"$tsc"
			]
		},
		{
			"label": "dev",
			"type": "shell",
			"command": "npm run dev",
			"group": "build",
			"isBackground": true,
			"problemMatcher": []
		},
		{
			"label": "build",
			"type": "shell",
			"command": "npm run build",
			"group": "build",
			"problemMatcher": [
				"$tsc"
			]
		},
		{
			"label": "lint",
			"type": "shell",
			"command": "npm run lint",
			"group": "test",
			"problemMatcher": [
				"$eslint-stylish"
			]
		}
	]
}